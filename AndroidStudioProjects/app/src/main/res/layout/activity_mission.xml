<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#94BA65"
    tools:context=".MissionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#353432">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCAL TIME"
            android:textSize="20sp"
            android:textColor="#EED7DC"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView2" />

        <ImageView
            android:src="@drawable/spacetop"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EARTH TIME"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:textColor="#EED7DC"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#353432">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:textColor="#EED7DC"
            android:layout_marginStart="38dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:src="@drawable/spacebottom"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextClock        android:layout_height="wrap_content"


            android:id="@+id/textClock2"
            android:textColor="#EED7DC"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#4E4E4C">

        <TextView

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="MISSION CHECKLIST"
            android:textSize="20sp"
            android:textColor="#EED7DC"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:textStyle="bold"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CheckBox1"
            android:textColor="#EED7DC"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:buttonTint="#EED7DC"
            android:text="Reach target site"
            android:checked="false"
            android:clickable="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CheckBox2"
            android:textColor="#EED7DC"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:buttonTint="#EED7DC"
            android:text="Section off test site"
            android:clickable="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CheckBox3"
            android:textColor="#EED7DC"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:buttonTint="#EED7DC"
            android:text="Collect soil samples"
            android:clickable="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CheckBox4"
            android:textColor="#EED7DC"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:buttonTint="#EED7DC"
            android:text="Collect environmental data"
            android:clickable="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CheckBox5"
            android:textColor="#EED7DC"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:buttonTint="#EED7DC"
            android:text="Befriend the martians"
            android:contextClickable="false"
            android:clickable="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CheckBox6"
            android:textColor="#EED7DC"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:buttonTint="#EED7DC"
            android:text="Return to base"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#353432">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:src="@drawable/base"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="90dp"
                />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.25km"
                android:textSize="40sp"
                android:textColor="#EED7DC"
                android:layout_marginTop="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="ELAPSED TIME: "
                android:textSize="20sp"
                android:textColor="#EED7DC"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>

            <Chronometer
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="285dp"
                android:layout_marginTop="15dp"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>